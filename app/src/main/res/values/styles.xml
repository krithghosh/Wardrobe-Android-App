<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="fab_plus" parent="android:Widget.Button">
        <item name="android:background">@drawable/fab_plus_background</item>
        <item name="android:layout_width">@dimen/fab_width</item>
        <item name="android:layout_height">@dimen/fab_height</item>
        <item name="android:src">@drawable/ic_add</item>
    </style>

    <style name="fab_shuffle" parent="android:Widget.Button">
        <item name="android:background">@drawable/fab_shuffle_background</item>
        <item name="android:layout_width">@dimen/fab_width</item>
        <item name="android:layout_height">@dimen/fab_height</item>
        <item name="android:src">@drawable/ic_shuffle</item>
    </style>

    <style name="fab_favourite" parent="android:Widget.Button">
        <item name="android:background">@drawable/fab_favourite_background</item>
        <item name="android:layout_width">@dimen/fab_width</item>
        <item name="android:layout_height">@dimen/fab_height</item>
        <item name="android:src">@drawable/ic_favourite</item>
    </style>

</resources>
